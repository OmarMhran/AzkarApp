<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/SettingsRow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_row_height">


        <TextView
            style="@style/SettingsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_color" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvColorList"
            style="@style/SettingsAction"
            android:orientation="horizontal"
            tools:listitem="@layout/color_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_label_width" />
    </FrameLayout>
</layout>
